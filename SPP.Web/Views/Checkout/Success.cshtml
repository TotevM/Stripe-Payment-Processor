@{
    ViewData["Title"] = "Order Successful";
}

@section Styles {
    <link rel="stylesheet" href="~/css/checkout.css" asp-append-version="true" />
}

<div class="checkout-result">
    <div class="checkout-result-card">
        <div class="checkout-result-icon success">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
        </div>
        <h2 class="checkout-result-title">
            Order Successful!
        </h2>
        <p class="checkout-result-message">
            Thank you for your purchase. Your order has been confirmed and will be processed shortly.
        </p>
        <div class="checkout-result-actions">
            <a href="/" class="checkout-result-button primary">
                Return to Home
            </a>
        </div>
    </div>
</div> 