@{
    ViewData["Title"] = "Payment Failed";
}

@section Styles {
    <link rel="stylesheet" href="~/css/checkout.css" asp-append-version="true" />
}

<div class="checkout-result">
    <div class="checkout-result-card">
        <div class="checkout-result-icon error">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </div>
        <h2 class="checkout-result-title">
            Payment Failed
        </h2>
        <p class="checkout-result-message">
            We couldn't process your payment. Please check your payment details and try again.
        </p>
        <div class="checkout-result-actions">
            <a href="/Cart" class="checkout-result-button error">
                Return to Cart
            </a>
            <a href="/" class="checkout-result-button secondary">
                Return to Home
            </a>
        </div>
    </div>
</div> 