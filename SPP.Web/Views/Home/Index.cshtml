@{
    ViewData["Title"] = "Luxora - Luxury Jewelry";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Timeless Elegance</h1>
        <p class="hero-subtitle">Discover our collection of exquisite jewelry pieces</p>
        <a href="/Product" class="cta-button">Explore Collection</a>
    </div>
    <div class="hero-overlay"></div>
</div>

<section class="featured-categories">
    <div class="container">
        <h2 class="section-title">Our Collections</h2>
        <div class="categories-grid">
            <div class="category-card">
                <img src="~/images/rings.jpg" alt="Rings Collection">
                <h3>Rings</h3>
                <a href="/Product?category=rings" class="category-link">View Collection</a>
            </div>
            <div class="category-card">
                <img src="~/images/necklaces.jpg" alt="Necklaces Collection">
                <h3>Necklaces</h3>
                <a href="/Product?category=necklaces" class="category-link">View Collection</a>
            </div>
            <div class="category-card">
                <img src="~/images/earrings.jpg" alt="Earrings Collection">
                <h3>Earrings</h3>
                <a href="/Product?category=earrings" class="category-link">View Collection</a>
            </div>
        </div>
    </div>
</section>

<section class="testimonials">
    <div class="container">
        <h2 class="section-title">Client Testimonials</h2>
        <div class="testimonials-slider">
            <div class="testimonial-card">
                <div class="testimonial-content">
                    <p>"The craftsmanship of Luxora's pieces is simply extraordinary. Each piece tells a unique story."</p>
                    <div class="testimonial-author">
                        <img src="~/appimg/clients/Sarah.jpg" alt="Sarah Johnson">
                        <div class="author-info">
                            <h4>Sarah Johnson</h4>
                            <div class="rating">★★★★★</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="testimonial-card">
                <div class="testimonial-content">
                    <p>"I've never seen such attention to detail. The quality of their jewelry is unmatched."</p>
                    <div class="testimonial-author">
                        <img src="~/appimg/clients/Michael.jpg" alt="Michael Chen">
                        <div class="author-info">
                            <h4>Michael Chen</h4>
                            <div class="rating">★★★★★</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="testimonial-card">
                <div class="testimonial-content">
                    <p>"Luxora's pieces are not just jewelry, they're works of art that become family heirlooms."</p>
                    <div class="testimonial-author">
                        <img src="~/appimg/clients/Emma.jpg" alt="Emma Thompson">
                        <div class="author-info">
                            <h4>Emma Thompson</h4>
                            <div class="rating">★★★★★</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/index.js" asp-append-version="true"></script>
}