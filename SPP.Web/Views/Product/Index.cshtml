@using SPP.ViewModels
@model List<ProductViewModel>

@{
    ViewData["Title"] = "Shop";
}

@section Styles {
    <link rel="stylesheet" href="~/css/productIndex.css" />
}

<div class="container py-5">
    <h1 class="text-center mb-5 display-4 fw-bold">Jewelry Shop</h1>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm product-card">
                    <div class="position-relative">
                        <img src="@product.ImageUrl" class="card-img-top product-image" alt="@product.Name">
                        <div class="card-img-overlay d-flex align-items-center justify-content-center">
                            <div class="btn-group">
                                <a href="#" class="btn btn-outline-light btn-sm me-2">View Details</a>
                                <a asp-controller="Product" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-shopping-cart me-1"></i>
                                    Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@product.Name</h5>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="h5 mb-0 text-primary">$@product.Price</span>
                            <span class="badge bg-success">In Stock</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>