@using SPP.ViewModels
@model List<ProductViewModel>

@{
    ViewData["Title"] = "Shop";
}

<h1 class="text-center mb-4">Jewelry Shop</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height:300px; object-fit:cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">$@product.Price</p>
                    <a href="#" class="btn btn-primary mt-auto">View Details</a>
                </div>
            </div>
        </div>
    }
</div>