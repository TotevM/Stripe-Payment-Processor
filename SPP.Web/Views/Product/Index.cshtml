@using SPP.ViewModels
@model List<ProductViewModel>

@{
    ViewData["Title"] = "Shop";
}

<div class="container py-5">
    <h1 class="text-center mb-5 display-4 fw-bold">Jewelry Shop</h1>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm product-card">
                    <div class="position-relative">
                        <img src="@product.ImageUrl" class="card-img-top product-image" alt="@product.Name">
                        <div class="card-img-overlay d-flex align-items-center justify-content-center">
                            <div class="btn-group">
                                <a href="#" class="btn btn-outline-light btn-sm me-2">View Details</a>
                                <button class="btn btn-primary btn-sm add-to-cart" data-product-id="@product.Id">
                                    <i class="fas fa-shopping-cart me-1"></i>Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@product.Name</h5>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="h5 mb-0 text-primary">$@product.Price</span>
                            <span class="badge bg-success">In Stock</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 10px;
        overflow: hidden;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .product-image {
        height: 300px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.05);
    }

    .card-img-overlay {
        background: rgba(0,0,0,0.5);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .product-card:hover .card-img-overlay {
        opacity: 1;
    }

    .btn-group {
        transform: translateY(20px);
        transition: transform 0.3s ease;
    }

    .product-card:hover .btn-group {
        transform: translateY(0);
    }

    .btn-outline-light:hover {
        background-color: #fff;
        color: #000;
    }

    .add-to-cart {
        background-color: #007bff;
        border: none;
    }

    .add-to-cart:hover {
        background-color: #0056b3;
    }

    .badge {
        font-size: 0.8rem;
        padding: 0.5em 1em;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.add-to-cart').click(function() {
                const productId = $(this).data('product-id');
                alert('Product added to cart!');
            });
        });
    </script>
}